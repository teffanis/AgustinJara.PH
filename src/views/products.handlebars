<div class="container">
  <h2>Catálogo de Productos</h2>
  
  <!-- Barra de búsqueda y filtros -->
  <div class="filters-section">
    <form method="get" action="/products" class="filter-form">
      <div class="filter-group">
        <label for="query">Búsqueda por categoría:</label>
        <input type="text" id="query" name="query" placeholder="Ej: retratos, paisajes" value="{{query}}" />
      </div>

      <div class="filter-group">
        <label for="sort">Ordenar por precio:</label>
        <select id="sort" name="sort">
          <option value="">Sin ordenar</option>
          <option value="asc" {{#if sort}}{{#eq sort 'asc'}}selected{{/eq}}{{/if}}>Ascendente (menor a mayor)</option>
          <option value="desc" {{#if sort}}{{#eq sort 'desc'}}selected{{/eq}}{{/if}}>Descendente (mayor a menor)</option>
        </select>
      </div>

      <div class="filter-group">
        <label for="limit">Productos por página:</label>
        <select id="limit" name="limit">
          <option value="5">5</option>
          <option value="10" selected>10</option>
          <option value="20">20</option>
          <option value="50">50</option>
        </select>
      </div>

      <button type="submit" class="btn btn-primary">Filtrar</button>
      <a href="/products" class="btn btn-secondary">Limpiar filtros</a>
    </form>
  </div>

  <!-- Listado de productos -->
  {{#if products.length}}
    <div class="products-grid">
      {{#each products}}
        <div class="product-card">
          <img src="{{this.thumbnails.[0]}}" alt="{{this.title}}" onerror="this.src='https://via.placeholder.com/300x200?text=Sin+Imagen'">
          <div class="product-info">
            <h3>{{this.title}}</h3>
            <p class="category">{{this.category}}</p>
            <p class="description">{{this.description}}</p>
            <p class="price">${{this.price}}</p>
            <p class="stock">Stock: {{this.stock}}</p>
            <div class="product-actions">
              <!-- Opción 1: Link a detalle del producto -->
              <a href="/products/{{this._id}}" class="btn btn-info">Ver detalles</a>
              
              <!-- Opción 2: Agregar al carrito directamente (requeriría JavaScript) -->
              <button class="btn btn-success add-to-cart" data-product-id="{{this._id}}" data-product-title="{{this.title}}">
                Agregar al carrito
              </button>
            </div>
          </div>
        </div>
      {{/each}}
    </div>

    <!-- Paginación -->
    {{#if totalPages}}
      <div class="pagination">
        <p class="pagination-info">
          Página {{currentPage}} de {{totalPages}} | Total de páginas: {{totalPages}}
        </p>

        <div class="pagination-links">
          {{#if hasPrevPage}}
            <a href="{{prevLink}}" class="btn btn-pagination">← Página anterior</a>
          {{else}}
            <button class="btn btn-pagination" disabled>← Página anterior</button>
          {{/if}}

          <span class="page-indicator">{{currentPage}}</span>

          {{#if hasNextPage}}
            <a href="{{nextLink}}" class="btn btn-pagination">Página siguiente →</a>
          {{else}}
            <button class="btn btn-pagination" disabled>Página siguiente →</button>
          {{/if}}
        </div>
      </div>
    {{/if}}
  {{else}}
    <p class="no-products">No hay productos disponibles con los filtros especificados.</p>
  {{/if}}
</div>

