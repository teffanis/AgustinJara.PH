<div class="container">
  <h2>Lista de Productos</h2>
  
  {{#if products.length}}
    <div class="products-grid">
      {{#each products}}
        <div class="product-card">
          <img src="{{this.thumbnails.[0]}}" alt="{{this.title}}" onerror="this.src='https://via.placeholder.com/300x200?text=Sin+Imagen'">
          <div class="product-info">
            <h3>{{this.title}}</h3>
            <p class="description">{{this.description}}</p>
            <p class="price">${{this.price}}</p>
            <p class="stock">Stock: {{this.stock}}</p>
            <p class="code">Código: {{this.code}}</p>
            <p class="category">Categoría: {{this.category}}</p>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <p class="no-products">No hay productos disponibles.</p>
  {{/if}}
</div>
